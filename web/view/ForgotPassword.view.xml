<mvc:View  xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" height="100%">
	<Page showHeader="false" class="page-bg">
		<l:BlockLayout class="exactCenter box">
			<l:BlockLayoutRow>
				<l:BlockLayoutCell class="txt-align-center">
					<Image class="circle-log " src="./images/stryx_logo.jpg"/>
					<Label class="txt-login-font-size txt-stryx" text="{i18n>STRYX}"/>
					<Label class="txt-login-font-size txt-sports" text="{i18n>SPORTS}"/>
				</l:BlockLayoutCell>
			</l:BlockLayoutRow>  
			<l:BlockLayoutRow visible="true" id="blockLayoutRowlogin">
				<l:BlockLayoutCell class="txt-color">
					<Label class="txt-color" text="{i18n>UserName}"/>
					<Input id="inputUserName" type="Text" placeholder="{i18n>PleaseEnterTheUserName}"/>
					<Button class="width-full btn-margin-top " text="{i18n>Login}" press="onPressLogin"/>
				</l:BlockLayoutCell>
			</l:BlockLayoutRow>  
		</l:BlockLayout>
	</Page>
</mvc:View>