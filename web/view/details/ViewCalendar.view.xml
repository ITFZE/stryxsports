<mvc:View
	controllerName="com.ss.app.StryxSports.controller.details.ViewCalendar"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:layout="sap.ui.layout"
	xmlns:unified="sap.ui.unified"
	xmlns="sap.m">
	<Page id="viewCalendarPage" showHeader="true" title="View Schedule" showNavButton="true" navButtonPress="goToPreviousPage">
		<content>
		<VBox class="sapUiSmallMargin">
			<PlanningCalendar
			id="PC1"
			startDate="{mCalenderSdate>/U_calenderSDate}"
			viewKey="One Month"
			rows="{path: 'mcSchedule>/U_Teams'}"
			appointmentsVisualization="Filled"
			appointmentSelect="handleAppointmentSelect"
			showEmptyIntervalHeaders="false"
			showWeekNumbers="true">
				<toolbarContent>
					<Title text="Teams" class="sapUiSmallMargin" titleStyle="H6"/>
					<ComboBox width="300px" placeholder="Please Select The Team Name" id="idTeamsName" change="onGetTeamNameList" items="{TeamNames>/value}">
        			    <items>
        			        <core:Item key="{ path: 'TeamNames>Code'}" text="{TeamNames>Name}"/>
        				</items>
        			</ComboBox>
					<Title text="Calender" class="sapUiSmallMargin" titleStyle="H6"/>
					<ComboBox width="300px" enabled="false" placeholder="Please Select The Team Calender" id="idTeamsCalender" change="onGetTeamCalenderList" items="{TeamsList>/value}">
        			    <items>
        			        <core:Item key="{ path: 'TeamsList>Code'}" text="{TeamsList>Name}"/>
        				</items>
        			</ComboBox>
				</toolbarContent>
				<rows>
					<PlanningCalendarRow
        				icon="sap-icon://employee-pane"
        				title="{mcSchedule>U_TeamName}"
        				text="{mcSchedule>U_TeamsName}"
        				appointments="{path : 'mcSchedule>U_Schedules', templateShareable: 'true'}"
        				intervalHeaders="{path: '', templateShareable: 'true'}">
						<customData>
							<core:CustomData key="emp-name" value="{mcSchedule>U_TeamName}" writeToDom="true"/>
						</customData>
						<appointments>
						<unified:CalendarAppointment 
        					startDate="{parts: [{path : 'mcSchedule>U_SDate'}, {path :'mcSchedule>U_STime'}],formatter:'.planningCalenderDate'}"
        					endDate="{parts: [{path : 'mcSchedule>U_EDate'}, {path :'mcSchedule>U_ETime'}],formatter:'.planningCalenderDate'}"
        					icon="sap-icon://appointment-2"
        					title="{mcSchedule>Name}"
        					text="Assessment"
        					type="Type02">
				    	</unified:CalendarAppointment>
							</appointments>
							<intervalHeaders>
								<unified:CalendarAppointment 
                			startDate="{parts: [{path : 'mcSchedule>U_SDate'}, {path :'mcSchedule>U_STime'}],formatter:'.planningCalenderDate'}"
        					endDate="{parts: [{path : 'mcSchedule>U_EDate'}, {path :'mcSchedule>U_ETime'}],formatter:'.planningCalenderDate'}"
        					icon="sap-icon://appointment-2"
        					title="{mcSchedule>Name}"
        					text="Assessment"
        					type="Type02">
                					</unified:CalendarAppointment>
							</intervalHeaders>
						</PlanningCalendarRow>
					</rows>
				</PlanningCalendar>
				
			</VBox>
		</content>
	</Page>
</mvc:View>