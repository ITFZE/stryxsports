			</IconTabBar>
		</content>
		<footer>
			<Bar>
				<contentRight>
					<Button tooltip="Save" icon="sap-icon://save" press="onPressSaveAddTeams"/>
					<Button tooltip="Cancel" icon="sap-icon://sys-cancel-2" press="onPressAddCancel"/>
				</contentRight>
			</Bar>
		</footer>
	</Page>
